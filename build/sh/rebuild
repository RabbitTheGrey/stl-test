#!/bin/bash
sudo docker compose down
sudo docker system prune -a
sudo docker compose build
sudo docker compose up -d

mkdir data
mkdir redis_data

# Опционально для доступа к редактированию кода
#sudo chown -R ilya ../
#sudo chown -R www-data ../storage

# Директории должны быть доступны системным контейнерам 
sudo chmod -R 1777 data
sudo chmod -R 1777 redis_data

#install vendors
sudo docker exec -it stl-fpm composer install

#apply db migrations
sudo docker exec -it stl-fpm php artisan migrate
